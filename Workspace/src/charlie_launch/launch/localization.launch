<?xml version="1.0"?>

<launch>
	<!--<arg name="IS_TWISTSTAMPED" default="true" /-->
	<param name ="/use_sim_time"	value="false"/>

	<!-- start Lidar -->
	<include file="$(find charlie_launch)/launch/rplidar_a3.launch"/>

	<!-- Load map, cambiare numero a file_NUM nel lancio del nodo/-->
	<!-- e inserire nuove righe per ciascuna nuova mappa acquisita -->
	<arg name="path" default="/home/pi/charlie_ws/maps/" />
	<arg name="file_1" default="stanza_volo_26_05" />
	<arg name="file_2" default="stanza_volo_04_06" />
	<node name="map_server" pkg="map_server" type="map_server" args="$(arg path)$(arg file_2).yaml"/>
	<node pkg="tf" type="static_transform_publisher" name="base_link2laser" args="0 0 0 0 0 0 1 base_link laser 100"/>

	<!-- tag_in_map: calcola la posa del punto centrale tra le due tag in coordinate map e la pubblica assieme ad una TF -->
	<node pkg="pozyx_ros" type="tag_in_map.py" name="tag_in_map"  output="screen"> </node>

	<!-- pose_fix_pub: se l'errore di posizionamento e` elevato ridefinisce /initialpose e la covarianza della posa -->
	<node pkg="pozyx_ros" type="pose_fix_pub.py" name="pose_fix_pub"  output="screen"> </node>
	
	<node name="navgoal" pkg="serial_manager" type="navgoal_script.py"/>

	<!-- Load Laser_Scan_Matcher /-->
	<node pkg="laser_scan_matcher" type="laser_scan_matcher_node"
		name="scan_matcher" output="screen">

		<param name="use_imu" value="false"/>
		<param name="use_odom" value="false"/>
		<param name="max_iterations" value="10"/>

		<param name="fixed_frame"  value="laser_odom"/>

		<param name="max_correspondence_dist" value="0.3"/>
		<param name="max_angular_correction_deg" value="45.0"/>
		<param name="max_linear_correction" value="0.5"/>

		<param name="kf_dist_linear" value="0.10"/>  <!--0.10-->
		<param name="kf_dist_angular" value="0.5"/>

	</node>

	<!-- Load AMCL /-->
	<node pkg="amcl" type="amcl" name="amcl" output="screen">
		<param name="odom_model_type" value="diff"/><!-- diff -->
		<param name="odom_alpha5" value="0.1"/>
		<param name="transform_tolerance" value="1" />
		<param name="gui_publish_rate" value="10.0"/>
		<param name="laser_max_beams" value="30"/>
		<param name="min_particles" value="500"/>  <!--500 -->
		<param name="max_particles" value="5000"/>  <!-- 5000 -->
		<param name="kld_err" value="0.03"/> <!-- 0.05 modificato DFL-->
		<param name="kld_z" value="0.99"/>
		<param name="odom_alpha1" value="0.005"/><!-- 0.005 -->
		<param name="odom_alpha2" value="0.005"/><!-- 0.005 -->
		<!-- translation std dev, m -->
		<param name="odom_alpha3" value="0.01"/> <!-- 0.01 -->
		<param name="odom_alpha4" value="0.005"/><!-- 0.005 -->
		<param name="laser_z_hit" value="0.99"/>  <!-- 0.5 -->
		<param name="laser_z_short" value="0.05"/>
		<param name="laser_z_max" value="0.05"/>
		<param name="laser_z_rand" value="0.01"/> <!--0.5-->
		<param name="laser_sigma_hit" value="0.2"/>
		<param name="laser_lambda_short" value="0.1"/>
		<param name="laser_lambda_short" value="0.1"/>
		<param name="laser_model_type" value="likelihood_field"/>
		<!-- <param name="laser_model_type" value="beam"/> -->
		<param name="laser_likelihood_max_dist" value="2.0"/>
		<param name="update_min_d" value="0.05"/> <!-- 0.05 0.2 -->
		<param name="update_min_a" value="0.1"/> <!-- 0.2 0.3 bipe --><!-- 0.5 -->
	 	<param name="global_frame_id" value="map"/> 
		<param name="odom_frame_id" value="laser_odom"/>
		<param name="resample_interval" value="1"/>
		<param name="transform_tolerance" value="0.2"/> <!-- 0.2 -->
		<param name="recovery_alpha_slow" value="0.001"/><!-- 0.0 media a lungo termine-->
		<param name="recovery_alpha_fast" value="0.1"/><!-- 0.0 media a breve termine--> 
	</node>
	
	<!-- start rviz, commentare se si usa rviz da remoto (consigliato) -->
	<!-- <node pkg="rviz" type="rviz" name="rviz"
		args="-d $(find charlie_launch)/rviz_cfg/test_frames_map.rviz">
	</node> -->
		
	<node pkg="pozyx_ros" type="amcl2robot_pose.py" name="amcl2robot_pose_PY"  
		output="screen"> 
	</node>

	
</launch>
