<?xml version="1.0"?>


<launch>	

	<!--<arg name="IS_TWISTSTAMPED" default="true" /-->
	<param name ="/use_sim_time" 	    value="false"/>

	<!-- start Lidar -->
	<include file="$(find charlie_launch)/launch/rplidar_a3.launch"/>

	<!-- Load map, static TF and position fixing /-->
	<node name="map_server" pkg="map_server" type="map_server" args="/home/pi/charlie_storage/stanza_volo_26_05.yaml"/>
	
	<node pkg="tf" type="static_transform_publisher" name="base_link2laser" args="0 0 0 0 0 0 1 base_link laser 100"/>

	<!-- tag_in_map: calcola la posa del punto centrale tra le due tag in coordinate map e la pubblica assieme ad una TF -->
	<node pkg="pozyx_ros" type="tag_in_map.py" name="tag_in_map"  output="screen"> </node>

	<!-- pose_fix_pub: se l'errore di posizionamento e` elevato ridefinisce /initialpose e la covarianza della posa -->
	<node pkg="pozyx_ros" type="pose_fix_pub.py" name="pose_fix_pub"  output="screen"> </node>
	
	<!-- Load Laser_Scan_Matcher /-->
	<node pkg="laser_scan_matcher" type="laser_scan_matcher_node"
		name="scan_matcher" output="screen">

		<param name="use_imu" value="false"/>
		<param name="use_odom" value="false"/>
		<param name="max_iterations" value="10"/>

		<param name="fixed_frame"  value="laser_odom"/>

		<param name="max_correspondence_dist" value="0.3"/>
		<param name="max_angular_correction_deg" value="45.0"/>
		<param name="max_linear_correction" value="0.5"/>

		<param name="kf_dist_linear" value="0.10"/>  <!--0.10-->
		<param name="kf_dist_angular" value="0.5"/>

	</node>

	<!-- start rviz -->
	<node pkg="rviz" type="rviz" name="rviz"
		args="-d $(find charlie_launch)/rviz_cfg/test_frames_map.rviz"/>

	
</launch>
