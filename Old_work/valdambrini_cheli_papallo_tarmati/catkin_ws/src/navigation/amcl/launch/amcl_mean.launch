<!-- DEFINIZIONE PARAMETRI AMCL CON FILTRO A MEDIA MOBILE-->

<?xml version="1.0"?>
<launch>

<node pkg="amcl" type="amcl" name="amcl" output="screen">
 
  <param name="odom_model_type" value="diff-corrected"/><!-- diff -->
  <param name="odom_alpha5" value="0.1"/>
  <param name="transform_tolerance" value="0.2" />
  <param name="gui_publish_rate" value="10.0"/>
  <param name="laser_max_beams" value="30"/>
  <param name="min_particles" value="500"/>  <!--500 -->
  <param name="max_particles" value="5000"/>  <!-- 5000 -->
  <param name="kld_err" value="0.03"/> <!-- 0.05 -->
  <param name="kld_z" value="0.99"/>
  <param name="odom_alpha1" value="0.005"/><!-- 0.2 -->
  <param name="odom_alpha2" value="0.005"/><!-- 0.2 -->
  <!-- translation std dev, m -->
  <param name="odom_alpha3" value="0.01"/> <!-- 0.8 -->
  <param name="odom_alpha4" value="0.005"/><!-- 0.05 -->
  <param name="laser_z_hit" value="0.5"/>
  <param name="laser_z_short" value="0.05"/>
  <param name="laser_z_max" value="0.05"/>
  <param name="laser_z_rand" value="0.5"/>
  <param name="laser_sigma_hit" value="0.2"/>
  <param name="laser_lambda_short" value="0.1"/>
  <param name="laser_lambda_short" value="0.1"/>
  <param name="laser_model_type" value="likelihood_field"/>
  <!-- <param name="laser_model_type" value="beam"/> -->
  <param name="laser_likelihood_max_dist" value="2.0"/>
  <param name="update_min_d" value="0.05"/> <!-- 0.2 -->
  <param name="update_min_a" value="0.1"/> <!-- 0.3 bipe --><!-- 0.5 -->
  <param name="odom_frame_id" value="odom"/>
  <param name="resample_interval" value="1"/>
  <param name="transform_tolerance" value="0.2"/> <!-- 0.1 -->
  <param name="recovery_alpha_slow" value="0.001"/><!-- 0.0 media a lungo termine-->
  <param name="recovery_alpha_fast" value="0.1"/><!-- 0.0 media a breve termine-->


<!-- AGGIUNTO BIPE -->

 <param name="global_frame_id" value="map"/>
 <param name="base_frame_id" value="base_link_mean"/>
 <param name="odom_frame_id" value="odom"/>

<remap from="scan" to="/scan"/>

</node>


<!--Rviz-->
<node name="rviz" pkg="rviz" type="rviz" args="-d $(find lidar_cam_mapping)/rviz.rviz" />

<node pkg="tf" type="static_transform_publisher" name="base_link2laser" args="0 -0.12 0 0 0 0 base_link_mean laser 100"/>

</launch>
